{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "blockBindings": true,
      "destructuring": true,
      "classes": true,
      "spread": true,
      "restParams": true,
      "templateStrings": true,
      "experimentalObjectRestSpread": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "commonjs": true
  },
  "globals": {
    "angular": true,
    "inject": true,
    "__dirname": true,
    "process": true
  },
  "extends": "eslint:recommended"
}
